import java.sql.*;

public class ProductCRUD {

    // Database credentials
    private static final String URL = "jdbc:mysql://localhost:3306/testdb"; // replace with your DB
    private static final String USER = "root";
    private static final String PASSWORD = "password";

    public static void main(String[] args) {
        try {
            // Load driver (optional for MySQL 8+)
            Class.forName("com.mysql.cj.jdbc.Driver");

            // 1. Create a product
            createProduct("Laptop", 55000);

            // 2. Read all products
            readProducts();

            // 3. Update product
            updateProduct(1, "Gaming Laptop", 65000);

            // 4. Delete product
            deleteProduct(1);

            // Read again to check
            readProducts();

        } catch (ClassNotFoundException | SQLException e) {
            e.printStackTrace();
        }
    }

    // ---------- CREATE ----------
    public static void createProduct(String name, double price) throws SQLException {
        String sql = "INSERT INTO product (name, price) VALUES (?, ?)";
        try (Connection con = DriverManager.getConnection(URL, USER, PASSWORD);
             PreparedStatement pst = con.prepareStatement(sql)) {

            pst.setString(1, name);
            pst.setDouble(2, price);
            int rows = pst.executeUpdate();
            System.out.println(rows + " product inserted.");
        }
    }

    // ---------- READ ----------
    public static void readProducts() throws SQLException {
        String sql = "SELECT * FROM product";
        try (Connection con = DriverManager.getConnection(URL, USER, PASSWORD);
             Statement stmt = con.createStatement();
             ResultSet rs = stmt.executeQuery(sql)) {

            System.out.println("Product List:");
            while (rs.next()) {
                System.out.println(rs.getInt("id") + " - " +
                                   rs.getString("name") + " - " +
                                   rs.getDouble("price"));
            }
        }
    }

    // ---------- UPDATE ----------
    public static void updateProduct(int id, String newName, double newPrice) throws SQLException {
        String sql = "UPDATE product SET name = ?, price = ? WHERE id = ?";
        try (Connection con = DriverManager.getConnection(URL, USER, PASSWORD);
             PreparedStatement pst = con.prepareStatement(sql)) {

            pst.setString(1, newName);
            pst.setDouble(2, newPrice);
            pst.setInt(3, id);

            int rows = pst.executeUpdate();
            System.out.println(rows + " product updated.");
        }
    }

    // ---------- DELETE ----------
    public static void deleteProduct(int id) throws SQLException {
        String sql = "DELETE FROM product WHERE id = ?";
        try (Connection con = DriverManager.getConnection(URL, USER, PASSWORD);
             PreparedStatement pst = con.prepareStatement(sql)) {

            pst.setInt(1, id);
            int rows = pst.executeUpdate();
            System.out.println(rows + " product deleted.");
        }
    }
}
